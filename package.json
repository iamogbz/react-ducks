{
    "name": "react-ducks",
    "version": "0.0.0",
    "description": "ðŸ¦† React ducks without Redux",
    "author": "iamogbz",
    "license": "Unlicense",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/react-ducks"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/react-ducks/issues"
    },
    "homepage": "https://github.com/iamogbz/react-ducks#readme",
    "keywords": [
        "react",
        "redux",
        "react-context",
        "ducks"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "typings"
    ],
    "scripts": {
        "build": "webpack",
        "bundlewatch": "npm pack && bundlewatch",
        "clean": "rm -rf ./dist",
        "commit": "git-cz",
        "dedupe": "npm dedupe",
        "e2e": "jest -c ./jest.e2e.config.ts",
        "lint": "eslint . --max-warnings=0 --ext .js,.jsx,.ts,.tsx",
        "release": "semantic-release",
        "test": "jest",
        "testd": "tsc --noEmit --project tsconfig.typings.json",
        "typed": "tsc --noEmit"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.(j|t)s{,x}": [
            "npm run lint",
            "bash -c 'npm run typed'",
            "npm test -- --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "bundlewatch": {
        "files": [
            {
                "compression": "none",
                "maxSize": "16kb",
                "path": "react-ducks-*.tgz"
            }
        ]
    },
    "dependencies": {
        "immer": "^10.1.1"
    },
    "peerDependencies": {
        "react": "^16.0.0||^17.0.0||^18.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.2.2",
        "@commitlint/config-conventional": "^19.2.2",
        "@commitlint/travis-cli": "^19.3.0",
        "@testing-library/dom": "^10.2.0",
        "@testing-library/react": "^16.0.0",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.9",
        "@types/react": "^18.3.3",
        "@types/react-is": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "acorn": "^8.12.0",
        "bundlewatch": "^0.3.3",
        "commitizen": "^4.3.0",
        "coveralls": "^3.1.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^27.9.0",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.3",
        "eslint-plugin-react-hooks": "^4.6.2",
        "expect-type": "^0.19.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.7",
        "prettier": "^3.3.2",
        "prettier-eslint": "^16.3.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-test-renderer": "^18.3.1",
        "rxjs": "^7.8.1",
        "semantic-release": "^24.0.0",
        "ts-jest": "^29.1.5",
        "ts-node": "^10.9.2",
        "type-plus": "^7.6.2",
        "typescript": "^5.5.3",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4",
        "webpack-compiler-plugin": "^1.1.5"
    }
}
